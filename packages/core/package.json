{
  "name": "react-native-ultra-carousel",
  "version": "1.0.2",
  "description": "The Ultimate Carousel Ecosystem for React Native. 35+ animation presets, plugin system, CLI tool. Built on Reanimated.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "prepublishOnly": "bob build",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.tsx",
    "clean": "del-cli lib"
  },
  "keywords": [
    "react-native",
    "carousel",
    "slider",
    "swiper",
    "animation",
    "reanimated",
    "expo",
    "ios",
    "android",
    "typescript",
    "gesture",
    "3d",
    "parallax",
    "coverflow",
    "tinder",
    "stack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/toankhontech/react-native-ultra-carousel"
  },
  "author": "toankhontech",
  "license": "MIT",
  "homepage": "https://github.com/toankhontech/react-native-ultra-carousel",
  "bugs": {
    "url": "https://github.com/toankhontech/react-native-ultra-carousel/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-reanimated": ">=3.0.0 <4.0.0 || >=4.0.0",
    "react-native-gesture-handler": ">=2.9.0"
  },
  "peerDependenciesMeta": {
    "react-native-reanimated": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "react-native": "^0.73.0",
    "react-native-reanimated": "^3.6.0",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-builder-bob": "^0.23.0",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.0.0",
    "typescript": "^5.4.0",
    "del-cli": "^5.1.0",
    "@types/jest": "^29.5.0",
    "react-test-renderer": "^18.2.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      ["typescript", { "project": "tsconfig.build.json" }]
    ]
  }
}
